# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_PATH=/
N8N_SECURE_COOKIE=false
N8N_TIMEZONE=UTC
N8N_LOG_LEVEL=info

# n8n Database (PostgreSQL)
N8N_DB_TYPE=postgresdb
N8N_DB_HOST=postgres
N8N_DB_PORT=5432
N8N_DB_DATABASE=n8n
N8N_DB_USER=n8n
N8N_DB_PASSWORD=your_secure_n8n_db_password_here

# n8n JWT
N8N_JWT_SECRET=your_secure_jwt_secret_here

# Gateway Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=3000
GATEWAY_PROTOCOL=http
GATEWAY_LOG_LEVEL=info

# Node Environment
NODE_ENV=production

# Optional: API Configuration
API_HOST=0.0.0.0
API_PORT=3001
API_SECRET_KEY=your_secure_api_key_here

# Optional: Redis Cache Configuration
REDIS_CACHE_ENABLED=true
REDIS_CACHE_TTL=3600

# Optional: Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true
