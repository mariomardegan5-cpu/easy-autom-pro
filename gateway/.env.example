# Gateway Environment Variables
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# N8N Webhook Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/whatsapp

# Gateway Server Configuration
PORT=3000

# WhatsApp Pairing Mode
# Options: 'qr' (QR Code - default) or 'code' (Pairing Code)
PAIRING_MODE=qr

# Phone number for pairing code mode (only used when PAIRING_MODE=code)
# Format: country code + number (e.g., 5511999999999)
# PHONE_NUMBER=5511999999999

# Logging
LOG_LEVEL=debug

# Additional Configuration
DEBUG=false
